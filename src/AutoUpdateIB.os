// Инициализация

// Инициализация параметров
Функция Инициализировать()
	
	Каталоги = Новый Структура;
	УстановитьКаталоги();

	ПараметрыАутентификации = Новый Структура;
	УстановитьПараметрыАутентификации();

	ПараметрыЗавершенияСоединения = Новый Структура;
	УстановитьПараметрыЗавершенияСоединения();

	ПараметрыБлокировкиCеансов = Новый Структура;
	УстановитьПараметрыБлокировкиCеансов();

	ПараметрыРезервногоКопирования = Новый Структура;
	УстановитьПараметрыРезервногоКопирования();

	НастройкиПодключения = Новый Структура;
	НастройкиПодключения.Вставить("СерверПроверкиОбновлений", 	  "downloads.1c.ru"); // Адрес сервера для проверки наличия обновлений (открытая часть).
	НастройкиПодключения.Вставить("ПутьКФайлуПроверкиОбновлений", "/ipp/ITSREPV/V8Update/Configs"); // Путь к файлу проверки обновлений на сервере.
	НастройкиПодключения.Вставить("СерверОбновлений", 			  "downloads.v8.1c.ru"); //Адрес сервера обновлений (закрытая часть).
	НастройкиПодключения.Вставить("ПутьКФайлуОбновлений", 		  "/tmplts"); // Путь к файлу обновлений на сервере.
	
КонецФункции

// Устанавливает каталоги хранения файлов обновления и временных файлов
	//
	// Параметры:
	//   КаталогФайловОбновления - Строка - Каталог с файлами обновления конфигураций; 
	//   КаталогВременныхФайлов  - Строка - Каталог для хранения временных файлов.
	//
Процедура УстановитьКаталоги(КаталогФайловОбновления = "", КаталогВременныхФайлов = "") Экспорт
	
	СистемнаяИнформация = Новый СистемнаяИнформация();

	Если ПустаяСтрока(КаталогФайловОбновления) Тогда 
		КаталогAPPDATA = СистемнаяИнформация.ПолучитьПеременнуюСреды("APPDATA");
		КаталогФайловОбновления = ОбъединитьПути(КаталогAPPDATA, "1C\1Cv8\tmplts\1c"); 
	КонецЕсли;
	Если НЕ ОбеспечитьКаталог(КаталогФайловОбновления) Тогда 
		ВызватьИсключение "Выполнение обработки прервано";
	КонецЕсли;

	Если ПустаяСтрока(КаталогВременныхФайлов) Тогда 
		КаталогTEMP = СистемнаяИнформация.ПолучитьПеременнуюСреды("TEMP");
		КаталогВременныхФайлов = ОбъединитьПути(КаталогTEMP, "AutoUpdateIB"); 
	КонецЕсли;
	Если НЕ ОбеспечитьКаталог(КаталогВременныхФайлов) Тогда 
		ВызватьИсключение "Выполнение обработки прервано";
	КонецЕсли;

	Каталоги.Вставить("КаталогФайловОбновления", КаталогФайловОбновления);
	Каталоги.Вставить("КаталогВременныхФайлов",  КаталогВременныхФайлов);

	Лог.Отладка(НСтр("ru = 'Установлены каталоги:'"));
	Для Каждого Параметр Из Каталоги Цикл	
		Лог.Отладка(СтрШаблон(НСтр("ru = '	%1 - ""%2"";'"), Параметр.Ключ, Параметр.Значение));
	КонецЦикла;

КонецПроцедуры

// Устанавливает значения параметров аутентификации
	//
	// Параметры:
	//   Пользователь - Строка - Имя пользователя для загрузки обновлений;
	//   Пароль		  - Строка - Пароль пользователя для загрузки обновлений.
	//
Процедура УстановитьПараметрыАутентификации(Пользователь = "", Пароль = "") Экспорт
    
	ПараметрыАутентификации.Вставить("Пользователь", Пользователь);
	ПараметрыАутентификации.Вставить("Пароль", 		 Пароль);
	
	Лог.Отладка(НСтр("ru = 'Установлены параметры аутентификации:'"));
	Для Каждого Параметр Из ПараметрыАутентификации Цикл	
		Лог.Отладка(СтрШаблон(НСтр("ru = '	%1 - ""%2"";'"), Параметр.Ключ, Параметр.Значение));
	КонецЦикла;

КонецПроцедуры

// Устанавливает значения параметров завершения Com соединения с информационной базой
	//
	// Параметры:
	//  ОжидатьЗавершениеСоединения	   - Булево - Ожидать завершения Com соединения с информационной базой;
	//  МаксИнтервалОжиданияФайловойИБ - Число  - Максимальный интервал ожидания завершения сеанса файловой информационной базы в секундах;
	//  ИнтервалОжиданияСервернойИБ	   - Число  - Интервал ожидания завершения сеанса клиент-серверной информационной базы в секундах.
	//
Процедура УстановитьПараметрыЗавершенияСоединения(ОжидатьЗавершениеСоединения = Истина, МаксИнтервалОжиданияФайловойИБ = 60, ИнтервалОжиданияСервернойИБ = 2) Экспорт

	ПараметрыЗавершенияСоединения.Вставить("ОжидатьЗавершениеСоединения", 	 ОжидатьЗавершениеСоединения);
	ПараметрыЗавершенияСоединения.Вставить("МаксИнтервалОжиданияФайловойИБ", МаксИнтервалОжиданияФайловойИБ);
	ПараметрыЗавершенияСоединения.Вставить("ИнтервалОжиданияСервернойИБ", 	 ИнтервалОжиданияСервернойИБ);

	Лог.Отладка(НСтр("ru = 'Установлены параметры завершения соединения:'"));
	Для Каждого Параметр Из ПараметрыЗавершенияСоединения Цикл	
		Лог.Отладка(СтрШаблон(НСтр("ru = '	%1 - ""%2"";'"), Параметр.Ключ, Параметр.Значение));
	КонецЦикла;

КонецПроцедуры

// Устанавливает значения параметров блокировки сеансов
	//
	// Параметры:
	//  БлокироватьСеансыИБ - Булево - Устанавливать блокировку сеансов перед обновлением;
	//  ИспользованиеИБ		- Булево - Использовать значения параметров блокировки сеансов из информационной базы;
	//  ИнтервалОжидания	- Число  - Интервал ожидания завершения работы пользователей по умолчанию в секундах.
	//
Процедура УстановитьПараметрыБлокировкиCеансов(БлокироватьСеансыИБ = Истина, ИспользованиеИБ = Истина, ИнтервалОжидания = 900) Экспорт

	ПараметрыБлокировкиCеансов.Вставить("БлокироватьСеансыИБ", БлокироватьСеансыИБ);
	ПараметрыБлокировкиCеансов.Вставить("ИспользованиеИБ",	   ИспользованиеИБ);
	ПараметрыБлокировкиCеансов.Вставить("ИнтервалОжидания",	   ИнтервалОжидания);

	Лог.Отладка(НСтр("ru = 'Установлены параметры блокировки сеансов:'"));
	Для Каждого Параметр Из ПараметрыБлокировкиCеансов Цикл	
		Лог.Отладка(СтрШаблон(НСтр("ru = '	%1 - ""%2"";'"), Параметр.Ключ, Параметр.Значение));
	КонецЦикла;

КонецПроцедуры

// Устанавливает значения параметров резервного копирования
	//
	// Параметры:
	//  СоздаватьРезервнуюКопию			  - Булево - Создавать резервную копию;
	//  КаталогРезервныхКопий			  - Строка - Каталог для хранения резевных копий и файлов дампа;
	//  ВосстанавливатьИнформационнуюБазу - Булево - Использовать восстановление информационной базы в случае падения.
	//
Процедура УстановитьПараметрыРезервногоКопирования(СоздаватьРезервнуюКопию = Истина, КаталогРезервныхКопий = "", ВосстанавливатьИнформационнуюБазу = Истина) Экспорт

	Если СоздаватьРезервнуюКопию Тогда  
		Если ПустаяСтрока(КаталогРезервныхКопий) Тогда 
			СистемнаяИнформация = Новый СистемнаяИнформация();
			КаталогTEMP = СистемнаяИнформация.ПолучитьПеременнуюСреды("TEMP");
			КаталогРезервныхКопий = ОбъединитьПути(КаталогTEMP, "AutoUpdateIB", "DumpIB"))
		КонецЕсли;
		Если НЕ ОбеспечитьКаталог(КаталогРезервныхКопий) Тогда 
			ВызватьИсключение "Выполнение обработки прервано";
		КонецЕсли;
	КонецЕсли;	

	ПараметрыРезервногоКопирования.Вставить("СоздаватьРезервнуюКопию",			 СоздаватьРезервнуюКопию);
	ПараметрыРезервногоКопирования.Вставить("КаталогРезервныхКопий",			 КаталогРезервныхКопий);
	ПараметрыРезервногоКопирования.Вставить("ВосстанавливатьИнформационнуюБазу", ВосстанавливатьИнформационнуюБазу);

	Лог.Отладка(НСтр("ru = 'Установлены параметры резервного копирования:'"));
	Для Каждого Параметр Из ПараметрыРезервногоКопирования Цикл	
		Лог.Отладка(СтрШаблон(НСтр("ru = '	%1 - ""%2"";'"), Параметр.Ключ, Параметр.Значение));
	КонецЦикла;

КонецПроцедуры

// Получить установленные параметры
	//
	// Параметры:
	//   Параметр - Строка - Наименование получаемых параметров 
	//
	// Возвращаемое значение:
	//  Структура, Неопределено - Запрашиваемые параметры, неопределено в случае ошибки.
	//
Функция ПолучитьПараметры(Параметр) Экспорт
  	
	Если Параметр = "Каталоги" Тогда
		Возврат Каталоги;
	ИначеЕсли Параметр = "ПараметрыАутентификации" Тогда 
		Возврат ПараметрыАутентификации;
	ИначеЕсли Параметр = "ПараметрыЗавершенияСоединения" Тогда 
		Возврат ПараметрыЗавершенияСоединения;
	ИначеЕсли Параметр = "ПараметрыБлокировкиCеансов" Тогда 
		Возврат ПараметрыБлокировкиCеансов;
	ИначеЕсли Параметр = "ПараметрыРезервногоКопирования" Тогда 
		Возврат ПараметрыРезервногоКопирования;
	Иначе 
		Лог.Ошибка(НСтр("ru = 'Параметр задан неверно.'"));
		Возврат Неопределено;
	КонецЕсли;

КонецФункции

